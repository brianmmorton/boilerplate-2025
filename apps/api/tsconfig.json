{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "./dist",
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}